generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id Int @id @default(autoincrement())

  userEmail        String
  amount           Float
  credits          Int
  stripeCheckoutId String  @unique
  stripeCustomerId String?

  createdAt DateTime @default(now())
}
